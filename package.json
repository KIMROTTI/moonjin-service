{
  "private": true,
  "scripts": {
    "init": "turbo run init",
    "build": "./env-deploy.sh && turbo run build",
    "start": "./env-deploy.sh && turbo run start",
    "dev": "./env-deploy.sh && turbo run dev",
    "lint": "turbo run lint",
    "deploy": "./env-deploy.sh && pm2 start npm --name moonjin-service -- start",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "preinstall": "turbo run preinstall",
    "build:packages": "turbo run build --filter=@moonjin/api-types",
    "build:client": "turbo run build --filter=client"
  },
  "devDependencies": {
    "@types/add": "^2",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.53.0",
    "lru-cache": "^10.0.2",
    "prettier": "^3.0.3",
    "tsconfig": "*",
    "turbo": "latest"
  },
  "name": "moonjin-service",
  "packageManager": "yarn@4.0.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "add": "^2.0.6",
    "client": "workspace:^",
    "workspace": "^0.0.1-preview.1"
  }
}
